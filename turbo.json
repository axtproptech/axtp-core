{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "generate-db": {
      "cache": false
    },
    "push-db": {
      "cache": false
    },
    "generate-core": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "pretty": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
